            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>callRunDragon</method-name>
            </method>
-->            
            <trans-attribute>Supports</trans-attribute>
        </container-transaction>
        <!-- commented as not needed as per jonas migration -->
        <container-transaction>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>handleOrder</method-name>
            </method>
            
            <!--<method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Home</method-intf>
                <method-name>create</method-name>
            </method>-->
            <method>
                <ejb-name>com.equant.csi.ejb.jms.OrderMDBean</ejb-name>
                <method-name>onMessage</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
