<?xml version="1.0"?>

<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
    <enterprise-beans>
        <session>
            <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
            <home>com.equant.csi.ejb.api.CsiApiHome</home>
            <remote>com.equant.csi.ejb.api.CsiApi</remote>
            <ejb-class>com.equant.csi.ejb.api.CsiApiEJB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            <ejb-ref>
                <ejb-ref-name>ejb/ServiceManager</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <home>com.equant.csi.ejb.biz.ServiceManagerHome</home>
                <remote>com.equant.csi.ejb.biz.ServiceManager</remote>
                <ejb-link>com.equant.csi.ejb.biz.ServiceManager</ejb-link>
            </ejb-ref>
        </session>
        <session>
            <ejb-name>com.equant.csi.ejb.biz.ServiceManager</ejb-name>
            <home>com.equant.csi.ejb.biz.ServiceManagerHome</home>
            <remote>com.equant.csi.ejb.biz.ServiceManager</remote>
            <ejb-class>com.equant.csi.ejb.biz.ServiceManagerEJB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Bean</transaction-type>
            <resource-ref>
                <res-ref-name>db/DataSource</res-ref-name>
                <res-type>javax.jdbc.DataSource</res-type>
                <res-auth>Container</res-auth>
            </resource-ref>
        </session>
	<!-- Commented MDB as we are using listener now. -->
         <message-driven>
            <ejb-name>com.equant.csi.ejb.jms.OrderMDBean</ejb-name>
            <ejb-class>com.equant.csi.ejb.jms.OrderMDBean</ejb-class>
            <transaction-type>Container</transaction-type>
            <acknowledge-mode>Auto-acknowledge</acknowledge-mode>
            <message-driven-destination>
                <destination-type>javax.jms.Queue</destination-type>
            </message-driven-destination>
            <ejb-ref>
                <ejb-ref-name>ejb/CsiApi</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <home>com.equant.csi.ejb.api.CsiApiHome</home>
                <remote>com.equant.csi.ejb.api.CsiApi</remote>
                <ejb-link>com.equant.csi.ejb.api.CsiApi</ejb-link>
            </ejb-ref>
        </message-driven>
    </enterprise-beans>

    <assembly-descriptor>
        <!-- Read -->
        <container-transaction>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>getServices</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>getServiceDetails</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>runExceptionReport</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>serviceMerge</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>serviceLookup</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>getLatestServiceElementStatus</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>getCSPServiceDetails</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>getCustomerInfoByServiceElementUSID</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>getBulkServiceList</method-name>
            </method>
            <method>
                <ejb-name>com.equant.csi.ejb.api.CsiApi</ejb-name>
                <method-intf>Remote</method-intf>
                <method-name>callRunCISExtract</method-name>
            </method>
           
